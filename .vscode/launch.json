{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch React App",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["start"],
        "sourceMaps": true,
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "env": {
          "CHOKIDAR_USEPOLLING": "true"
        }
      },
      {
        "type": "chrome",
        "request": "launch",
        "name": "Debug React App in Chrome",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/src"
      }
    ]
  }
  